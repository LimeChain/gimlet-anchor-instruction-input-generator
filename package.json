{
  "name": "@limechain/gimlet-anchor-instruction-input-generator",
  "version": "0.0.2",
  "description": "Generate instruction JSON files dynamically from JS tests for Agave Ledger Tool",
  "main": "dist/cjs/index.js",        
  "module": "dist/esm/index.js",     
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build": "npm run build:cjs && npm run build:esm",
    "test": "jest"
  },
  "keywords": [
    "anchor",
    "instruction",
    "solana",
    "json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LimeChain/gimlet-anchor-instruction-input-generator"
  },
  "author": "LimeChain",
  "license": "MIT",
  "dependencies": {
    "fs": "^0.0.1-security"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "@types/node": "^24.2.1",
    "@types/jest": "^30.0.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "prettier": "^3.6.2"
  }
}
